{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "CommonJS", // Changed to CommonJS for Node.js compatibility
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node", // Use "node" for backend compatibility
    "allowSyntheticDefaultImports": true, // Ensures compatibility with CommonJS modules
    "esModuleInterop": true, // Compatibility with CommonJS
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
